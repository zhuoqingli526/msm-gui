<h1>
  List of all movies
</h1>


<form action="/insert_movie_record" method="post">
  <div>
    <label for="title">Title<lable>
    <input id="title" type="text" name="the_title">
  </div>

  <div>
    <label for="year">Year<lable>
    <input id="year" type="text" name="the_year">
  </div>

  <div>
    <label for="duration">Duration<lable>
    <input id="duration" type="text" name="the_duration">
  </div>

  <div>
    <label for="des">Description<lable>
    <input id="des" type="text" name="the_description">
  </div>

  <div>
    <label for="image">Image<lable>
    <input id="image" type="text" name="the_image">
  </div>

  <div>
    <label for="did">Director ID <lable>
    <input id="did" type="text" name="the_director_id">
  </div>

  <button>Create movie</button>




</form>


<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.order({:year => :desc, :title => :asc}).each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <% if the_director == nil %>
        Uh oh! We weren't able to find a director for this movie.
      <% else %>
        <%= the_director.name %>

      <% end %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
