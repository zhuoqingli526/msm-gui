<h1>
  List of all directors
</h1>

<hr>
  <form action="/create_director" method="post">
    <div>
      <label for="name">Name</label>
      <input id="name" type="text" name="the_name">
    </div>

    <div>
      <label for="dob">Dob</label>
      <input id="dob" type="date" name="the_dob">
    </div>

    <div>
      <label for="bio">Bio</label>
      <textarea id="bio" name="the_bio" rows="3"></textarea>
    </div>

    <div>
      <label for="image">Image</label>
      <input id="image" type="text" name="the_image">
    </div>

    <button>Create director</button>
</hr>



<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_directors.order({:dob => :desc}).each do |director| %>
  <tr>
    <td>
      <%= director.id %>
    </td>

    <td>
      <img src="<%= director.image %>" style="width:250px;">
    </td>

    <td>
      <%= director.name %>
    </td>

    <td>
      <%= director.dob %>
    </td>

    <td>
      <a href="/directors/<%= director.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
