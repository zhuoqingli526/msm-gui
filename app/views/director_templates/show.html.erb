<h1>
  Director #<%= @the_director.id %> details
</h1>

<a href="/directors">
  Go back
</a>


<div>
<a href="/delete_director/<%= @the_director.id%>">
  Delete director
</a>
</div>

<hr>
  <form action="/update_director/<%= @the_director.id%>", method="post">
    <div>
      <label for="name">Name</label>
      <input id="name" type="text" name="the_name" value ="<%= @the_director.name%>">
    </div>

    <div>
      <label for="dob">Dob</label>
      <input id="dob" type="date" name="the_dob" value ="<%= @the_director.bio%>">
    </div>

    <div>
      <label for="bio">Bio</label>
      <textarea id="bio" name="the_bio" rows="3"><%= @the_director.bio %></textarea>
    </div>

    <div>
      <label for="image">Image</label>
      <input id="image" type="text" name="the_image" value ="<%= @the_director.image%>">
    </div>

    <button>Update director</button>
  </form>
</hr>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_director.image %>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= @the_director.created_at %>
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= @the_director.updated_at %>
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% the_id = @the_director.id %>

  <% matching_movies = Movie.where({ :director_id => the_id }) %>
  
  <% films = matching_movies.order({ :year => :asc }) %>

  <% films.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <%= @the_director.name %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
